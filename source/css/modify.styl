/* 更改字体 */
@font-face {
  font-family: 'tzy';
/* 字体名自定义即可 */
  src: url("../fonts/ZhuZiAWan.woff2");
/* 字体文件路径 */
}

body {
  font-family: tzy !important;
}


/* 更改页面站名效果 */
.site-name {
  position: relative;
  font-size: 1.3em;
  padding-left: 5px;
}

.site-name::before {
  opacity: 0;
  background-color: #39c5bb !important;
  border-radius: 8px;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  -ms-border-radius: 8px;
  -o-border-radius: 8px;
  transition: .3s;
  -webkit-transition: .3s;
  -moz-transition: .3s;
  -ms-transition: .3s;
  -o-transition: .3s;
  position: absolute;
  top: 0!important;
  right: 0!important;
  left: 2px;
  width: 100%;
  height: 100%;
  content: "\f015";
  font-family: "Font Awesome 6 Free";
  text-align: center;
  line-height: 100%;
  color: #fff;
  line-height: 34px;
}

.site-name:hover::before {
  opacity: 1;
}

/* 去掉 a 标签下划线 */
a {
  text-decoration: none !important;
}

/* 更改打赏收款码下面文本的字体 */
div.post-qr-code-desc {
  font-size: 1.5em;
  color: rgba(57, 197, 188, 0.736) !important;
}

/* 返回顶部按钮样式 */
button#go-up .scroll-percent {
  font-weight: 700;
  font-size: 15px !important;
}

/* 鼠标滑动到按钮上时显示返回顶部图标 */
button#go-up:hover i {
    display: block !important;
}
button#go-up:hover .scroll-percent {
    display: none !important;
}

/* 更改评论框高度 */
.el-textarea__inner {
  min-height: 120px !important;
  max-height: 500px !important;
  height: 120px !important;
  padding-top: 10px !important;
}

/* 评论区 输入qq号获取信息的显示框 */
.el-input.el-input--small.el-input-group.el-input-group--prepend:focus-within::after, .el-input.el-input--small.el-input-group.el-input-group--prepend:focus-within::before {
  display: block;
}

.el-input.el-input--small.el-input-group.el-input-group--prepend:nth-child(1):before {
  content: "输入QQ号会自动获取昵称和头像🐧";
}

.el-input.el-input--small.el-input-group.el-input-group--prepend::before {
  display: none;
  position: absolute;
  top: -60px;
  white-space: nowrap;
  border-radius: 10px;
  left: 60%;
  transform: translate(-50%);
  padding: 14px 18px;
  background: rgba(30, 30, 30, 0.7);
  color: #fff;
}

.el-input.el-input--small.el-input-group.el-input-group--prepend:focus-within::after, .el-input.el-input--small.el-input-group.el-input-group--prepend:focus-within::before {
  display: block;
}

.el-input.el-input--small.el-input-group.el-input-group--prepend::after {
  display: none;
  content: "";
  position: absolute;
  border: 12px solid transparent;
  border-top-color: rgba(30, 30, 30, 0.7);
  left: 40%;
  transform: translate(-50%,-46.5px);
}


